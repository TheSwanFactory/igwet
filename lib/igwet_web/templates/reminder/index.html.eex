<h2>Listing Reminders</h2>

<span><%= link "New Node", to: reminder_path(@conn, :new) %></span>

<table class="table">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Type</th>
      <th>Name</th>
      <th>Initials</th>
      <th>About</th>
      <th>Email</th>
      <th>Phone</th>
      <th>URL</th>
      <th>Date</th>
      <th>Key</th>
    </tr>
  </thead>
  <tbody>
<%= for node <- @nodes do %>
    <tr>
      <td class="text-left">
        <span><%= link "Show", to: reminder_path(@conn, :show, node), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: reminder_path(@conn, :edit, node), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: reminder_path(@conn, :delete, node), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
      <td><%= Network.get_type(node) %></td>
      <td><%= node.name %></td>
      <td><%= node.initials %></td>
      <td><%= node.about %></td>
      <td><%= node.email %></td>
      <td><%= node.phone %></td>
      <td><%= node.url %></td>
      <td><%= node.date %></td>
      <td><%= node.key %></td>
    </tr>
<% end %>
  </tbody>
</table>
