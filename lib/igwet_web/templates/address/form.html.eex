    <%= text_input f, :country, class: "form-control" %>
    <%= error_tag f, :country %>
  </div>

  <div class="form-group">
    <%= label f, :level, class: "control-label" %>
    <%= text_input f, :level, class: "form-control" %>
    <%= error_tag f, :level %>
  </div>

  <div class="form-group">
    <%= label f, :staircase, class: "control-label" %>
    <%= text_input f, :staircase, class: "form-control" %>
    <%= error_tag f, :staircase %>
  </div>

  <div class="form-group">
    <%= label f, :entrance, class: "control-label" %>
