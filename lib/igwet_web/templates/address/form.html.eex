<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :house_number, class: "control-label" %>
    <%= text_input f, :house_number, class: "form-control" %>
    <%= error_tag f, :house_number %>
  </div>

  <div class="form-group">
    <%= label f, :road_prefix, class: "control-label" %>
    <%= text_input f, :road, class: "form-control" %>
    <%= error_tag f, :road %>
  </div>

  <div class="form-group">
    <%= label f, :road_base, class: "control-label" %>
    <%= text_input f, :road, class: "form-control" %>
    <%= error_tag f, :road %>
  </div>

  <div class="form-group">
    <%= label f, :road_type, class: "control-label" %>
    <%= text_input f, :road, class: "form-control" %>
    <%= error_tag f, :road %>
  </div>

  <div class="form-group">
    <%= label f, :road_suffix, class: "control-label" %>
    <%= text_input f, :road, class: "form-control" %>
    <%= error_tag f, :road %>
  </div>

  <div class="form-group">
    <%= label f, :unit_type, class: "control-label" %>
    <%= text_input f, :unit_type, class: "form-control" %>
