    <%= error_tag f, :island %>
  </div>

  <div class="form-group">
    <%= label f, :state_district, class: "control-label" %>
    <%= text_input f, :state_district, class: "form-control" %>
    <%= error_tag f, :state_district %>
  </div>

  <div class="form-group">
    <%= label f, :country_region, class: "control-label" %>
    <%= text_input f, :country_region, class: "form-control" %>
    <%= error_tag f, :country_region %>
  </div>

  <div class="form-group">
    <%= label f, :world_region, class: "control-label" %>
