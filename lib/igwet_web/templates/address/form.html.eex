  </div>

  <div class="form-group">
    <%= label f, :unit_base, class: "control-label" %>
    <%= text_input f, :unit_base, class: "form-control" %>
    <%= error_tag f, :unit_base %>
  </div>

  <div class="form-group">
    <%= label f, :city, class: "control-label" %>
    <%= text_input f, :city, class: "form-control" %>
